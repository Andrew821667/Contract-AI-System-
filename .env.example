# ==============================================
# CONTRACT AI SYSTEM - Environment Variables
# ==============================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/contract_ai

# LLM API Keys
# ============
# Claude (Anthropic)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...

# Perplexity (использует OpenAI-совместимый API)
PERPLEXITY_API_KEY=pplx-...

# YandexGPT
YANDEX_API_KEY=...
YANDEX_FOLDER_ID=...

# DeepSeek
DEEPSEEK_API_KEY=...

# Qwen (Alibaba Cloud)
QWEN_API_KEY=...

# Default LLM Provider
# Варианты: claude | openai | perplexity | yandex | deepseek | qwen
DEFAULT_LLM_PROVIDER=openai

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_data

# File Storage Paths
UPLOAD_DIR=./data/uploads
NORMALIZED_DIR=./data/normalized
REPORTS_DIR=./data/reports
TEMPLATES_DIR=./data/templates
EXPORTS_DIR=./data/exports

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO

# Streamlit UI
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Redis (optional, для кэширования)
REDIS_URL=redis://localhost:6379/0

# LLM Settings
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=120

# RAG Settings
RAG_TOP_K=5
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Security
# IMPORTANT: Generate a secure key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
