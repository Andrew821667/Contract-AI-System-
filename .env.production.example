# ==============================================
# CONTRACT AI SYSTEM - Production Environment
# ==============================================

# ==================== Domain ====================
DOMAIN=your-domain.com  # Ваш домен без http://

# ==================== Database ====================
POSTGRES_USER=contract_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DATABASE_URL=postgresql://contract_user:CHANGE_THIS_STRONG_PASSWORD_123!@postgres:5432/contract_ai

# ==================== Redis ====================
REDIS_URL=redis://redis:6379/0

# ==================== Security ====================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHARACTER_STRING_generate_with_openssl_rand_hex_32
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ==================== Application ====================
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# ==================== LLM API Keys ====================
# Выберите основной провайдер: openai | anthropic | yandex | gigachat | deepseek | qwen
DEFAULT_LLM_PROVIDER=openai

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# YandexGPT
YANDEX_API_KEY=
YANDEX_FOLDER_ID=

# GigaChat (Сбер)
GIGACHAT_API_KEY=
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# DeepSeek
DEEPSEEK_API_KEY=

# Qwen (Alibaba)
QWEN_API_KEY=

# Perplexity
PERPLEXITY_API_KEY=

# ==================== ChromaDB & RAG ====================
CHROMA_PERSIST_DIRECTORY=/app/chroma_data
RAG_TOP_K=5
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# ==================== File Storage ====================
UPLOAD_DIR=/app/data/uploads
NORMALIZED_DIR=/app/data/normalized
REPORTS_DIR=/app/data/reports
TEMPLATES_DIR=/app/data/templates
EXPORTS_DIR=/app/data/exports

# ==================== LLM Settings ====================
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=120

# ==================== Email (Optional) ====================
# SENDGRID_API_KEY=
# EMAIL_FROM=noreply@your-domain.com

# ==================== Stripe Payments (Optional) ====================
# STRIPE_API_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ==================== Monitoring (Optional) ====================
# SENTRY_DSN=
# PROMETHEUS_ENABLED=true

# ==================== CORS ====================
CORS_ORIGINS=http://your-domain.com,https://your-domain.com

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200
